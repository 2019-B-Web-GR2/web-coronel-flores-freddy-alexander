

<% const isEditing = cuarto != undefined %>
<p>motelid <%= motelId %></p>

<div class="container">

    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
        <p>motelID? <%= datos.motelId %></p>
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text"><%= isEditing? 'Editando '+cuarto.id : 'Cuarto Nuevo' %></h2>
        </div>


        <div class="mdl-card__supporting-text">
            <form action="/room?motelId=<%= datos.motelId %><%= isEditing? '&roomId='+cuarto.id : ''%>"
                  method="POST">
                <% if (isEditing) {%>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input
                            class="mdl-textfield__input"
                            type="number"
                            id="id"
                            name="id"
                            value="<%= isEditing? cuarto.id : '' %>"
                            disabled
                    >

                    <label
                            class="mdl-textfield__label"
                            for="id">Cuarto Id</label>

                </div>
                <% }%>



                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input
                            class="mdl-textfield__input"
                            type="text"
                            id="tipoHabitacionId"
                            name="tipoHabitacion"
                            value="<%= isEditing? cuarto.tipoHabitacion : '' %>"
                    >

                    <label
                            class="mdl-textfield__label"
                            for="tipoHabitacionId">Tipo de Habitacion</label>

                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input
                            class="mdl-textfield__input"
                            type="number"
                            id="precioId"
                            name="precio"
                            value="<%= isEditing? cuarto.precio : '' %>">
                    <label class="mdl-textfield__label" for="precioId">Precio</label>
                </div>

               <!-- <div class="mdl-checkbox mdl-js-checkbox mdl-checkbox--floating-label">
                    <input
                            class= "mdl-checkbox__input"
                            type="checkbox"
                            id="ocupadaId"
                            name="ocupada">
                    <label  for="ocupadaId"> Ocupado </label>
                </div>
-->
                <label class = "mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect"
                       for = "checkbox2">
                    <input
                            type = "checkbox"
                            id = "checkbox2"
                            class = "mdl-checkbox__input"
                            name="ocupada"
                            value="<%= isEditing? cuarto.ocupada : '' %>">
                    <span class = "mdl-checkbox__label">Ocupada</span>
                </label>
                <br>

                <button
                        class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored"
                        type="submit">
                    <i class="material-icons">save</i>
                   Guardar
                </button>


            </form>
        </div>

    </div>

</div>

