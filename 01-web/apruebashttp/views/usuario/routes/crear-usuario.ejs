

<%- include('../../compartido/cabecera')  %>


<div class="container">
    <% if(datos.error) { %>
    <div class="alert alert-danger" role="alert">
        <%= datos.error %>

    </div>
    <%}%>


    <h1>crear usuario</h1>

    <form action="/usuario"
          method="POST">

        <div class="form-group">
            <label for="nombreID">Nombre</label>
            <input  id="nombreID"
                    type="text"
                    name="nombre"
                    class="form-control"
                    title="Ingresar Nombre"
                    placeholder="Ej: Alexander Coronel"
            >

            <small id="nombreIDHelp"
                   class="form-text text-muted">
                Ingresa un nombre mayor a 3 caracteres
            </small>

        </div>

        <div class="form-group">
            <label for="cedulaID">Cedula</label>
            <input  id="cedulaID"
                    type="text"
                    name="cedula"
                    class="form-control"
                    title="Ingresar Cedula"
                    placeholder="Ej: 645484"
            >

            <small id="cedulaIDHelp"
                   class="form-text text-muted">
                ingresar cedula valida
            </small>

        </div>


        <button type="submit"
        class="btn btn-success">Submit</button>
        <button type="reset"
                class="btn btn-secondary"
        >limpiar </button>
        <button type="button">buton</button>

    </form>


</div>

